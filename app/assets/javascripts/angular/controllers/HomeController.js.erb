angular.module('ppApp').controller("HomeController", [
                '$scope',

        function($scope) {

            $scope.buttons_number = 6;

            $scope.addButton = function() {
                $scope.buttons_number ++;
            };

            $scope.removeButton = function() {
                if($scope.buttons_number > 0) {
                    $scope.buttons_number--;
                }
            };

            $scope.powerOfTwo = function(power) {
                return Math.pow(2, power);
            };

            $scope.getNumber = function(num) {
                return new Array(num);
            };

            function init(){

            }

            init();
        }
]);
